<h3>ユーザー編集</h3>

<%= form_with model: @plan, local: true do |f| %>
  <table>
    <tr>
    <th class = "users_tilte"> <span class = "title_ast"> <%= f.label :title ,"タイトル *" %></span> </th>
    <td><%= f.text_field :title ,size: 50 %></td>
  </tr>
    </tr>
    <tr>
      <th><%= f.label :start_date, "開始日" %></th>
      <td><%= f.date_field :start_date %></td>
    </tr>
    <tr>
      <th><%= f.label :end_date ,"終了日" %></th>
      <td><%= f.date_field :end_date %></td>
    </tr>
    <tr>
    <th><%= f.label :is_all_day , "終日の場合はチェックを入れます"%></th>
    <td><%= f.check_box :is_all_day %></td>
    <tr>
    <th><%= f.label :sche_memo ,"スケジュールメモ" %></th>
    <td><%= f.text_area :sche_memo ,  class: 'form-control',size: "50x10" %></td>
  </tr>
  </table>

  <div>
    <ul>
      <li><%= f.submit "編集を完了する" %></li>
      <li><%= link_to "スケジュール情報一覧に戻る", :plans %></li>
    </ul>
  </div>
<% end %>
